<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ScrollActivity11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:paddingTop="4dp"
            android:paddingStart="@dimen/dp_50"
            android:textStyle="bold"
            android:textColor="#9400D3"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:onClick="aisle"
            android:background="@drawable/button_chooser"
            android:layout_height="40dp"
            android:src="@drawable/a"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_marginLeft="110dp"
            android:src="@drawable/pinkearth"
            android:layout_width="50dp"
            android:onClick="star"
            android:background="@drawable/button_chooser"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_marginLeft="200dp"
            android:layout_width="50dp"
            android:src="@drawable/stars"
            android:onClick="star"
            android:background="@drawable/button_chooser"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>


        <ImageView
            android:layout_marginLeft="300dp"
            android:layout_width="50dp"
            android:onClick="heart"
            android:src="@drawable/pinkheart"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>







    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="Your Likes"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="70dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="320dp"
            android:text="A second look at"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/grey"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="360dp"
            android:text="your recent Likes"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/grey"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="650dp"
            android:background="@color/black"
            android:paddingStart="@dimen/dp_50"
            android:paddingTop="4dp"
            android:textColor="#9400D3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:onClick="home"
            android:layout_marginTop="670dp"
            android:backgroundTint="@color/grey"
            android:src="@drawable/darkhome" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="670dp"
            android:src="@drawable/quotes" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="670dp"
            android:src="@drawable/chat" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="670dp"
            android:src="@drawable/profile" />





    </RelativeLayout>









    </ScrollView>

</LinearLayout>