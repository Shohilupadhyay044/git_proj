<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laststep">

    <TextView
        android:id="@+id/basic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="Last Step"
        android:textSize="20sp"
        android:paddingTop="2dp"
        android:textStyle="bold"
        android:paddingStart="@dimen/dp_50"
        android:textColor="#9400D3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="What describes"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:paddingStart="@dimen/dp_50"/>

    <TextView
        android:id="@+id/yourself"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="you better?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:paddingStart="@dimen/dp_50"/>

    <TextView
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectangle_tera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourself"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/etFirstName"
        app:layout_constraintStart_toStartOf="@id/etFirstName"
        android:text="or"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:background="@drawable/circle_black"/>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_proper"
        app:layout_constraintStart_toStartOf="@id/etFirstName"
        app:layout_constraintTop_toTopOf="@id/etFirstName"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/tech"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:paddingStart="30dp"
        android:paddingTop="16dp"
        android:background="@drawable/button_text_color"
        android:text="Tech Savvy"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etFirstName"
        app:layout_constraintTop_toTopOf="@+id/etFirstName" />

    <TextView
        android:id="@+id/luddite"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Luddite"
        android:background="@drawable/button_text_color"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/etFirstName"
        app:layout_constraintTop_toTopOf="@+id/etFirstName"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_50"
        android:textColorHint="@color/grey"/>





    <TextView
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle_tera"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/etEmail"
        android:text="or"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:background="@drawable/circle_black"/>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_proper"
        app:layout_constraintStart_toStartOf="@id/etEmail"
        app:layout_constraintTop_toTopOf="@id/etEmail"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/Handyman"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:paddingStart="30dp"
        android:paddingTop="16dp"
        android:text="Handyman"
        android:background="@drawable/button_text_color"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etEmail"
        app:layout_constraintTop_toTopOf="@+id/etEmail" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Do it by Yourself"
        android:id="@+id/Do"
        android:background="@drawable/button_text_color"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/etEmail"
        app:layout_constraintTop_toTopOf="@+id/etEmail"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="@dimen/dp_50"
        android:textColorHint="@color/grey"/>



    <TextView
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle_tera"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/spinner"
        app:layout_constraintStart_toStartOf="@id/spinner"
        android:text="or"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:background="@drawable/circle_black"/>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_proper"
        app:layout_constraintStart_toStartOf="@id/spinner"
        app:layout_constraintTop_toTopOf="@id/spinner"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:paddingStart="30dp"
        android:paddingTop="16dp"
        android:id="@+id/Libral"
        android:background="@drawable/button_text_color"
        android:text="Libral"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Conservative"
        android:id="@+id/cons"
        android:background="@drawable/button_text_color"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="50dp"
        android:textColorHint="@color/grey"/>


    <TextView
        android:id="@+id/etDob"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_tera"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/etDob"
        app:layout_constraintStart_toStartOf="@id/etDob"
        android:text="or"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:background="@drawable/circle_black"/>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_proper"
        app:layout_constraintStart_toStartOf="@id/etDob"
        app:layout_constraintTop_toTopOf="@id/etDob"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:paddingStart="30dp"
        android:paddingTop="16dp"
        android:text="India"
        android:id="@+id/India"
        android:background="@drawable/button_text_color"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etDob"
        app:layout_constraintTop_toTopOf="@+id/etDob" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Abroad"
        android:id="@+id/Abroad"
        android:paddingTop="16dp"
        android:background="@drawable/button_text_color"
        app:layout_constraintEnd_toEndOf="@id/etDob"
        app:layout_constraintTop_toTopOf="@+id/etDob"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="50dp"
        android:textColorHint="@color/grey"/>

    <TextView
        android:id="@+id/etDobb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_tera"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDob"
        android:layout_marginTop="20dp"
        android:textColor="@color/grey"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/etDobb"
        app:layout_constraintStart_toStartOf="@id/etDobb"
        android:text="or"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:background="@drawable/circle_black"/>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_proper"
        app:layout_constraintStart_toStartOf="@id/etDobb"
        app:layout_constraintTop_toTopOf="@id/etDobb"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:paddingStart="30dp"
        android:background="@drawable/button_text_color"
        android:paddingTop="16dp"
        android:text="Passive"
        android:id="@+id/Passive"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etDobb"
        app:layout_constraintTop_toTopOf="@+id/etDobb" />


    <TextView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Aggressive"
        android:id="@+id/Aggressive"
        android:background="@drawable/button_text_color"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/etDobb"
        app:layout_constraintTop_toTopOf="@+id/etDobb"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="50dp"
        android:textColorHint="@color/grey"/>


    <TextView
        android:id="@+id/tap"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Tap 'or' for more options"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDobb"/>


    <Button
        android:id="@+id/btnnext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/tap"
        android:text=">"
        android:onClick="btn"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle_back"/>



</androidx.constraintlayout.widget.ConstraintLayout>