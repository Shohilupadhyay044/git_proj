<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp_activity">


    <TextView
        android:paddingStart="@dimen/dp_50"
        android:id="@+id/textnumb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/entertheotp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="38sp"
        android:text="Enter The"
        android:paddingStart="@dimen/dp_50"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textnumb"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="38sp"
        android:text="OTP"
        android:paddingStart="@dimen/dp_50"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/entertheotp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/getotp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/continu"
        android:onClick="continu"
        android:background="@drawable/rectangle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/getotp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>