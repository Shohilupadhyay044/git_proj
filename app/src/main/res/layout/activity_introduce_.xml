<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduce_Activity">

    <TextView
        android:id="@+id/basic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Basics"
        android:textSize="20sp"
        android:paddingTop="2dp"
        android:textStyle="bold"
        android:paddingStart="@dimen/dp_50"
        android:textColor="#9400D3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Introduce"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:paddingStart="@dimen/dp_50"/>

    <TextView
        android:id="@+id/yourself"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Yourself"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:paddingStart="@dimen/dp_50"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourself"
        android:layout_marginTop="30dp"
        android:hint="First Name"
        android:textSize="22sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFirstName"
        android:background="@drawable/rectangle_mera"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:background="@drawable/rectangle_mera"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginRight="10dp"
        android:paddingStart="30dp"
        android:layout_marginLeft="10dp"
        android:outlineSpotShadowColor="@color/grey"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_height="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        android:background="@drawable/rectangle_mera"/>


    <EditText
        android:id="@+id/etDob"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginTop="10dp"
        android:hint="Date of Birth"
        android:textColor="@color/grey"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>





    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDob"
        android:background="@drawable/rectangle_mera"/>

    <EditText
        android:id="@+id/Location"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDob"
        android:layout_marginTop="10dp"
        android:hint="Location"
        android:textColor="@color/grey"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingStart="30dp"
        android:textColorHint="@color/grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Location"
        android:background="@drawable/rectangle_mera"/>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/etDob"
        android:layout_marginTop="@dimen/dp_50"
        android:text=">"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle_back"/>








</androidx.constraintlayout.widget.ConstraintLayout>