<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ScrollActivity10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:paddingTop="4dp"
            android:paddingStart="@dimen/dp_50"
            android:textStyle="bold"
            android:textColor="#9400D3"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/a"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:onClick="Earth"
            android:layout_marginLeft="110dp"
            android:background="@drawable/button_chooser"
            android:src="@drawable/pinkearth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_marginLeft="200dp"
            android:layout_width="50dp"
            android:src="@drawable/stars"
            android:background="@drawable/button_chooser"
            android:onClick="star"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>


        <ImageView
            android:layout_marginLeft="300dp"
            android:layout_width="50dp"
            android:onClick="heart"
            android:background="@drawable/button_chooser"
            android:src="@drawable/pinkheart"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"/>






    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white">


            <ImageView
                android:background="@color/white"
                android:id="@+id/imageview"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bicena" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:background="@drawable/rectangle_tera"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginLeft="35dp">

                <ImageView
                    android:id="@+id/setv"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:onClick="ImageVisible"
                    android:src="@drawable/card"/>


            </androidx.cardview.widget.CardView>






            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="200dp"
                android:paddingStart="20dp"
                android:text="Arina 22"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sendinvites"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="250dp"
                android:background="@drawable/rectangle_tera"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="Send Invite"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/likes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="220dp"
                android:onClick="circleheart"
                android:background="@drawable/circle"
                android:drawableStart="@drawable/ic_favourite"
                android:gravity="center"
                android:paddingStart="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="340dp"
                android:paddingStart="@dimen/dp_50"
                android:paddingTop="10dp"
                android:text="Liberal than"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="390dp"
                android:paddingStart="@dimen/dp_50"
                android:paddingTop="10dp"
                android:text="Conservative"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="440dp"
                android:background="@drawable/circle"
                android:drawableStart="@drawable/ic_double_quotes"
                android:gravity="center"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="440dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:text="Send Invites"
                android:textColor="#9400D3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="520dp"
                android:background="@drawable/rectangle_mera" />

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="525dp"
                android:background="@color/white"
                android:src="@drawable/detail" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="730dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="830dp"
                android:src="@drawable/bica" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1050dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/likes2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="1050dp"
                android:onClick="Likes2"
                android:background="@drawable/circle"
                android:drawableStart="@drawable/ic_favourite"
                android:gravity="center"
                android:paddingStart="20dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1180dp"
                android:src="@drawable/specification" />

            <Button
                android:id="@+id/X"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1500dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="1600dp"
                android:background="@color/black"
                android:paddingStart="@dimen/dp_50"
                android:paddingTop="4dp"
                android:textColor="#9400D3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1620dp"
                android:backgroundTint="@color/grey"
                android:src="@drawable/darkhome" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="1620dp"
                android:src="@drawable/quotes" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="1620dp"
                android:src="@drawable/chat" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="1620dp"
                android:src="@drawable/profile" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>